<!DOCTYPE html>
<html>
  <head>
    <title>CheckRev</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.logo = "<%= image_url('logo.png') %>";
    </script>
    <script type="text/javascript">
      window.chef = "<%= image_url('background.png') %>";
    </script>
    <script type="text/javascript">
      window.construction = "<%= image_url('construction.jpg') %>";
    </script>
    <script type="text/javascript">
      window.home = "<%= image_url('home-icon.png') %>";
    </script>
    <script type="text/javascript">
      window.pro = "<%= image_url('pro-icon.png') %>";
    </script>
    <script type="text/javascript">
      window.rest = "<%= image_url('rest-icon.png') %>";
    </script>
    <script type="text/javascript">
      window.redCarpet = "<%= image_url('red-carpet.png') %>";
    </script>
    <script src="https://kit.fontawesome.com/413d5d2739.js" crossorigin="anonymous"></script>
    <%# <script>window.logo = url('app/assets/images/logo.png')</script> %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": <%= current_user.email %>,
          "firstName": <%= current_user.first_name %>
        };
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
